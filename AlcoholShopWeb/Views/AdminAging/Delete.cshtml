@model AlcoholShopWeb.Models.Aging

@{
    ViewData["Title"] = "Usuń";
}

<h2>Usuń</h2>

<div class="alert alert-danger">
    <p>Czy na pewno chcesz usunąć <strong>@Model.Name</strong>?</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="AgingID" />
    <button type="submit" class="btn btn-danger">Tak, usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
