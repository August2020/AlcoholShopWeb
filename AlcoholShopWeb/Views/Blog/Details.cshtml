@model AlcoholShopWeb.Models.BlogPost

<h2>@Model.Title</h2>
<p class="text-muted">Opublikowano: @Model.PublishDate?.ToString("dd.MM.yyyy")</p>
<p><strong>Kategoria:</strong> @Model.BlogCategory?.Name</p>

<div class="mb-3">
    @Html.Raw(Model.Content)
</div>

<div>
    <strong>Tagi:</strong>
    @foreach (var tag in Model.BlogPostTags.Select(t => t.Tag))
    {
        <span class="badge bg-info">@tag.Name</span>
    }
</div>