@model AlcoholShopWeb.Models.Product

<h2 class="mt-4">@Model.Name</h2>

<div class="card">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageURL" class="img-fluid rounded-start" alt="@Model.Name" onerror="this.src='/images/noimage.png';">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4><strong>Opis:</strong></h4>
                <p class="card-text"> @Model.Description</p>
                <h4><strong>Dane produktu:</strong></h4>
                <p><strong>Kategoria:</strong> @Model.Category?.Name</p>
                <p><strong>Producent:</strong> @Model.Producer?.Name</p>
                <p><strong>Kraj:</strong> @Model.Country?.Name</p>
                <p><strong>Metoda produkcji:</strong> @Model.ProductionMethod?.Name</p>
                <p><strong>Starzenie:</strong> @Model.Aging?.Name (@Model.AgingDuration)</p>
                <p><strong>Pojemność:</strong> @Model.VolumeML ml</p>
                <p><strong>Alkohol:</strong> @Model.AlcoholPercentage %</p>
                <p><strong>Cena:</strong> @Model.Price zł</p>
                <p><strong>Dostępność:</strong> @(Model.Availability == true ? "Tak" : "Nie")</p>

                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </div>
    </div>
</div>

@if (Model.Availability == true)
{
    var userId = Context.Session.GetString("UserId");

    if (!string.IsNullOrEmpty(userId))
    {
        <form asp-controller="Cart" asp-action="AddItem" method="post" class="mt-4">
            <input type="hidden" name="productId" value="@Model.ProductID" />
            <div class="input-group mb-3" style="max-width: 250px;">
                <input type="number" name="quantity" class="form-control" min="1" value="1" required />
                <button type="submit" class="btn btn-success">Dodaj do koszyka</button>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning mt-3">Zaloguj się, aby dodać do koszyka.</div>
    }
}
else
{
    <div class="alert alert-danger mt-3">Produkt niedostępny</div>
}


@if (Context.Session.GetString("UserId") != null)
{
    <form asp-action="AddReview" method="post" class="mt-4">
        <input type="hidden" name="productId" value="@Model.ProductID" />

        <div class="mb-2">
            <label for="comment">Twoja opinia:</label>
            <textarea name="comment" class="form-control" rows="3" required></textarea>
        </div>

        <div class="mb-3">
            <label for="rating">Ocena:</label>
            <select name="rating" class="form-select" style="max-width: 160px;" required>
                <option value="5">⭐⭐⭐⭐⭐</option>
                <option value="4">⭐⭐⭐⭐</option>
                <option value="3">⭐⭐⭐</option>
                <option value="2">⭐⭐</option>
                <option value="1">⭐</option>
            </select>
        </div>

        <button type="submit" class="btn btn-outline-primary">Dodaj recenzję</button>
    </form>
}
else
{
    <div class="alert alert-info">Zaloguj się, aby dodać recenzję.</div>
}

<hr />
<h4>Recenzje</h4>

@if (Model.Reviews.Any())
{
    foreach (var r in Model.Reviews.OrderByDescending(r => r.CreatedAt))
    {
        <div class="border rounded p-3 mb-2">
            <strong>@r.User.FirstName @r.User.LastName</strong>
            <span class="text-muted small">(@r.CreatedAt.ToString("g"))</span>
            <p class="mb-0">@r.Comment</p>
            <div>
                <span class="text-warning">
                    @for (int i = 0; i < r.Rating; i++)
                    {
                        <text>★</text>
                    }
                    @for (int i = r.Rating; i < 5; i++)
                    {
                        <text>☆</text>
                    }
                </span>
            </div>
        </div>
    }
}
else
{
    <p>Brak recenzji.</p>
}

