@model AlcoholShopWeb.Models.Product

<h2 class="mt-4">@Model.Name</h2>

<div class="card">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageURL" class="img-fluid rounded-start" alt="@Model.Name" onerror="this.src='/images/noimage.png';">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <p class="card-text"><strong>Opis:</strong> @Model.Description</p>
                <p><strong>Kategoria:</strong> @Model.Category?.Name</p>
                <p><strong>Producent:</strong> @Model.Producer?.Name</p>
                <p><strong>Kraj:</strong> @Model.Country?.Name</p>
                <p><strong>Metoda produkcji:</strong> @Model.ProductionMethod?.Name</p>
                <p><strong>Starzenie:</strong> @Model.Aging?.Name (@Model.AgingDuration)</p>
                <p><strong>Pojemność:</strong> @Model.VolumeML ml</p>
                <p><strong>Alkohol:</strong> @Model.AlcoholPercentage %</p>
                <p><strong>Cena:</strong> @Model.Price zł</p>
                <p><strong>Dostępność:</strong> @(Model.Availability == true ? "Tak" : "Nie")</p>

                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </div>
    </div>
</div>
